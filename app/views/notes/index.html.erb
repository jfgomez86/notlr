<% if !@notes.blank? -%>
  <%= link_to_function "Create a note", 
    "Modalbox.show('%s', {title: 'Create a new Note'})" % new_note_path %> 
  <br class="clear" />
  <div id="shown_notes">
    <% for note in @notes -%>
      <%= render :partial => note %>
    <% end -%>
  </div>
<% else -%>
  <span class="warning">There are no notes. <%= link_to_function "Create One", 
    "Modalbox.show('%s', {title: 'Create a new Note'})" % new_note_path %></span>
<% end -%>
<ul id="hidden_notes"></ul>
<%= hidden_field_tag "auth_token",  form_authenticity_token %> 
<div id="new_note_form"></div>
