<%= link_to_function "", 
  "Modalbox.show('%s', {title: 'Create a new Note'})" % new_note_path, :class => "new_note_btn" %> 
<br class="clear" />                                                                       
<div id="shown_notes">
  <% if !@notes.blank? -%>
    <% for note in @notes -%>
      <%= render :partial => note unless !note.deleted_at.nil? %>
    <% end -%>
  <% end -%>
</div>

<ul id="hidden_notes"></ul>
<%= hidden_field_tag "auth_token",  form_authenticity_token %> 
<div id="new_note_form"></div>
<%= image_tag 'Trash.png', :class => "trash_bin", :id => "trash" %>
